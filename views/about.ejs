  <section class="appointment-section" id="appoint">
  <h2 class="section-heading">Book an Appointment</h2>
  <div id="feedback-message"></div> <!-- Feedback message will be displayed here -->
  <form class="appointment-form" id="appointment-form" onsubmit="submitForm(event)" action="/submit" method="POST">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="phone">Phone:</label>
      <input type="tel" id="phone" name="phone" required>
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required>
    </div>
    <div class="form-group">
      <label for="time">Time:</label>
      <input type="time" id="time" name="time" required>
    </div>
    <div class="form-group">
      <label for="message">Message:</label>
      <textarea id="message" name="message" required></textarea>
    </div>
    <button type="submit" class="submit-button">Submit</button>
  </form>
</section>

  


